<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>srvPremiacion</servlet-name>
        <servlet-class>controlador.srvPremiacion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvBuscarPremiacion</servlet-name>
        <servlet-class>controlador.srvBuscarAdopcion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvActualizarPrem</servlet-name>
        <servlet-class>controlador.srvActualizarAdop</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>srvBuscarAdopciones</servlet-name>
        <servlet-class>controlador.srvBuscarAdopciones</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>srvPremiacion</servlet-name>
        <url-pattern>/srvPremiacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvBuscarPremiacion</servlet-name>
        <url-pattern>/srvBuscarPremiacion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvActualizarPrem</servlet-name>
        <url-pattern>/srvActualizarPrem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srvBuscarAdopciones</servlet-name>
        <url-pattern>/srvBuscarAdopciones</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>actualizarAdopciones.jsp</welcome-file>
    </welcome-file-list>
</web-app>
